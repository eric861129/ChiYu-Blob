<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net8.0-android;net8.0-ios;net8.0-maccatalyst;net8.0-windows10.0.19041.0</TargetFrameworks>
    <OutputType>Exe</OutputType>
    <RootNamespace>HabitRPG.MauiApp</RootNamespace>
    <UseMaui>true</UseMaui>
    <SingleProject>true</SingleProject>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <ItemGroup>
    <MauiXaml Include="Views\*.xaml" />
    <MauiImage Include="Resources\Images\*" />
    <MauiFont Include="Resources\Fonts\PressStart2P.ttf" Alias="PressStart2P" />
  </ItemGroup>
</Project>
